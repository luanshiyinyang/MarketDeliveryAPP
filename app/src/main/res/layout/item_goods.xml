<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_margin="5dp"
        android:src="@mipmap/ic_launcher"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="TODO" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="商品名称"
            android:textColor="#000"
            android:textSize="16sp"
            android:id="@+id/tv_good_item_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
        <RatingBar
            android:id="@+id/rb_good_item"
            android:layout_width="wrap_content"
            android:stepSize="0.5"
            android:numStars="5"
            android:rating="3.5"
            android:isIndicator="true"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_good_item_price"
                android:text="￥ 100"
                android:textSize="16sp"
                android:textColor="#FF3300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="right"
                android:layout_toEndOf="@id/tv_good_item_price"
                android:layout_alignParentEnd="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_good_item_minus"
                    android:clickable="true"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:background="@drawable/button_minus"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/tv_good_item_count"
                    android:text="0"
                    android:minWidth="20dp"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_good_item_add"
                    android:clickable="true"
                    android:textStyle="bold"
                    android:background="@drawable/button_add"
                    android:gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:focusable="true" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>